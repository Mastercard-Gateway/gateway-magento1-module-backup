<?xml version="1.0"?>
<config>
	<sections>
		<payment>
			<groups>
				<Mastercard_hint>
					<frontend_model>mpgs/adminhtml_system_config_fieldset_hint</frontend_model>
					<sort_order>4224</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
				</Mastercard_hint>
				<Mastercard_hosted translate="label,comment" module="mpgs">
					<label>Mastercard Hosted Checkout</label>
					<frontend_type>text</frontend_type>
					<sort_order>4225</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<comment>
								<![CDATA[
								Be sure grant guest access to Mpgs Rest API and its resources in <b>&ldquo;System&rdquo; &rarr; &ldquo;REST - Roles&rdquo;</b> and <b>&ldquo;System&rdquo; &rarr; &ldquo;REST - Attributes&rdquo;</b>.
								]]>
							</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<payment_action>
							<label>Payment Action</label>
							<frontend_type>select</frontend_type>
							<source_model>mpgs/source_authtypes</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</payment_action>
						<title translate="label">
							<label>Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</title>
						<api_username>
							<label>API Username</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</api_username>
						<api_password translate="label">
							<label>API Password</label>
							<frontend_type>obscure</frontend_type>
							<backend_model>adminhtml/system_config_backend_encrypted</backend_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</api_password>
						<end_point_url>
							<label>End Point</label>
							<frontend_type>select</frontend_type>
							<source_model>mpgs/source_endpoints</source_model>
							<sort_order>45</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</end_point_url>
						<webhook_secret translate="label">
							<label>WebHook Secret</label>
							<comment>
								<![CDATA[
								Be sure to enable the WebHook support in your MasterCard Merchant Administration.
								]]>
							</comment>
							<frontend_type>obscure</frontend_type>
							<backend_model>adminhtml/system_config_backend_encrypted</backend_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</webhook_secret>
						<webhook_url>
							<label>WebHook URL</label>
							<comment>
								<![CDATA[
								If Empty the magento internal controller will be used.
								]]>
							</comment>
							<frontend_type>text</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</webhook_url>
						<test translate="label">
							<label>Test Mode</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</test>
						<debug translate="label">
							<label>Debug Mode</label>
							<comment>
								<![CDATA[
								Enable additional log output for payment processes
								]]>
							</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</debug>
						<order_status translate="label">
							<label>New Order Status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status</source_model>
							<sort_order>90</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</order_status>
						<currency translate="label">
							<label>Accepted Currency</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_locale_currency</source_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</currency>
						<allowspecific translate="label">
							<label>Payment Applicable From</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_payment_allspecificcountries</source_model>
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</allowspecific>
						<specificcountry translate="label">
							<label>Countries Payment Applicable From</label>
							<frontend_type>multiselect</frontend_type>
							<source_model>adminhtml/system_config_source_country</source_model>
							<sort_order>120</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<allowspecific>1</allowspecific>
							</depends>
						</specificcountry>
					</fields>
				</Mastercard_hosted>
			</groups>
		</payment>
	</sections>
</config>
