<?xml version="1.0"?>
<layout version="0.1.0">
    <checkout_onepage_review>
        <reference name="checkout.onepage.review.info.items.after">
            <block type="checkout/agreements" name="checkout.onepage.agreements" as="agreements"
                   template="checkout/onepage/agreements.phtml"/>
            <block type="mpgs/checkout_placeOrder" name="checkout.onepage.review.mastercard-place-order"
                   template="Mastercard/checkout/placeOrder.phtml"/>
        </reference>
    </checkout_onepage_review>
    <checkout_cart_index>
        <reference name="checkout.cart.methods">
            <block type="mpgs/cart_placeOrder" name="checkout.cart.methods.onepage.wallet" template="Mastercard/cart/placeOrder.phtml" after="checkout.cart.methods.onepage" before="checkout.cart.methods.multishipping">
                <block type="mpgs/cart_button_amex_hpf" name="Mastercard_amex_hpf" template="Mastercard/amex/hpf_button.phtml" />
                <block type="mpgs/cart_button_amex_direct" name="Mastercard_amex_direct" template="Mastercard/amex/direct_button.phtml" />
            </block>
        </reference>
    </checkout_cart_index>
    <mastercard_review_index translate="label">
        <label>Order Summary</label>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="mpgs/review" name="checkout.review" template="Mastercard/review.phtml">
                <block type="checkout/cart_totals" name="checkout.review.details" as="details" template="Mastercard/review/details.phtml">
                    <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/onepage/review/item.phtml</template></action>
                    <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/onepage/review/item.phtml</template></action>
                    <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/onepage/review/item.phtml</template></action>
                    <block type="checkout/cart_totals" name="checkout.review.details.totals" as="totals" template="checkout/onepage/review/totals.phtml"/>
                </block>
            </block>
        </reference>
    </mastercard_review_index>
</layout>
